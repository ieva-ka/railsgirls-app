
<h1 class="top-text">Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4 idea-class">
       
        
    <%= image_tag idea.picture_url(:thumb) if idea.picture.present? %>
    <div class="idea-text">
        <h4 class='idea-name'><%= link_to idea.name, idea %></h4>
        <%= idea.description %>
      </div>
      </div>
    <% end %>

  </div>
<% end %>
